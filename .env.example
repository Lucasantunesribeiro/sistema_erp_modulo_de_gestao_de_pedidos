# =============================================================================
# Sistema ERP - Módulo de Gestão de Pedidos
# Variáveis de Ambiente - Exemplo
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,api

# -----------------------------------------------------------------------------
# Database - MySQL (OBRIGATÓRIO)
# -----------------------------------------------------------------------------
DATABASE_URL=mysql://erp_user:erp_password@db:3306/erp_orders
DB_NAME=erp_orders
DB_USER=erp_user
DB_PASSWORD=erp_password
DB_HOST=db
DB_PORT=3306
MYSQL_ROOT_PASSWORD=rootpass

# -----------------------------------------------------------------------------
# Cache/Queue - Redis (OBRIGATÓRIO)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_ALWAYS_EAGER=False

# -----------------------------------------------------------------------------
# Idempotency Settings
# -----------------------------------------------------------------------------
IDEMPOTENCY_TTL=86400
IDEMPOTENCY_KEY_HEADER=Idempotency-Key

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=True

# -----------------------------------------------------------------------------
# OpenTelemetry
# -----------------------------------------------------------------------------
OTEL_ENABLED=False
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=erp-orders-api

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Pagination
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# NOTAS IMPORTANTES:
# -----------------------------------------------------------------------------
# 1. NUNCA commite o arquivo .env real com secrets
# 2. Em produção, use um gerenciador de secrets (AWS Secrets Manager, etc.)
# 3. Mantenha este arquivo atualizado com todas as variáveis necessárias
# 4. Para desenvolvimento local, copie este arquivo para .env e ajuste
