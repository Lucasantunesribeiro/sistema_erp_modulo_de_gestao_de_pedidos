# =============================================================================
# CorpSystem ERP - Production Environment
# =============================================================================
DEBUG=False
SECRET_KEY=<CHANGE_ME>
DJANGO_LOG_LEVEL=ERROR
ALLOWED_HOSTS=.production.com

# Database - MySQL
DATABASE_URL=mysql://erp_user:erp_password@db:3306/erp_orders
DB_NAME=erp_orders
DB_USER=erp_user
DB_PASSWORD=<CHANGE_ME>
DB_HOST=db
DB_PORT=3306
MYSQL_ROOT_PASSWORD=<CHANGE_ME>

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_ALWAYS_EAGER=False

# Idempotency
IDEMPOTENCY_TTL=86400
IDEMPOTENCY_KEY_HEADER=Idempotency-Key

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=ERROR
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=True

# Security (strict)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS / CSRF
CORS_ALLOWED_ORIGINS=https://production.com
CSRF_TRUSTED_ORIGINS=https://production.com

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
